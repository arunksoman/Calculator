#:import hex kivy.utils.get_color_from_hex
<FlatButton@Button>:
    background_color: hex('#222222')
    background_normal: ''
    font_size: 40
<HomeScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: hex('#111111')
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        Label:
            id: warning
            markup: True
            text: ""
            size_hint_y: 0.05
            font_size: 15
            halign: 'right'
        NumberInput:
            id: input
            size_hint_y: 0.2
            font_size: '40px'
            background_color: hex('#111111')
            foreground_color: hex('#ffffff')
            halign: 'right'
            valign: 'middle'
            border: [0, 0, 0, 0]
            background_normal: ''
            cursor_color: hex('#ffffff')
            multiline: False
            background_active: ''
            focus: True
            on_text: root.validate() if self.text != "" else root.clear_result()
        Label:
            id: result
            text: ""
            size_hint_y: 0.15
            font_size: 25
            halign: 'right'
        GridLayout:
            cols: 4
            spacing: 1
            FlatButton:
                text: '('
                on_release: root.fill_input(self.text)
            FlatButton:
                text: ')'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: '%'
                on_release: root.fill_input(self.text)
            FlatButton:
                font_name: 'fontawesome-free/fa-solid-900.ttf'
                text: '\uf55a'
                # text: '\u232b'
                on_release: root.backspace(input.cursor)
                # on_release: input.do_backspace()
            FlatButton:
                id: seven
                text: '7'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: '8'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: '9'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: '-'
                on_release: root.fill_input("", self.text)
            FlatButton:
                text: '4'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: '5'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: '6'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: '\u00f7'
                on_release: root.fill_input("", self.text)
            FlatButton:
                text: '1'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: '2'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: '3'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: 'x'
                exact_operation: '*'
                on_release: root.fill_input("", self.exact_operation)
            FlatButton:
                text: '.'
                on_release: root.fill_input("", self.text)
            FlatButton:
                text: '0'
                on_release: root.fill_input(self.text)
            FlatButton:
                text: '='
                on_release: root.fill_input("", self.text)
            FlatButton:
                text: '+'
                on_release: root.fill_input("", self.text)  
                